<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
          android:orientation="vertical"
          android:layout_width="match_parent"
          android:layout_height="match_parent">

        <TextView
            style="?android:listSeparatorTextViewStyle"
            android:id="@+id/activity_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Profile Settings"
            android:textSize="20dp"
            android:paddingTop="30dp"
            android:paddingBottom="30dp" />
        <!--- START ID -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User ID (Identification)"
            android:textSize="18dp"
            android:paddingTop="10dp"
            android:paddingLeft="10dp" />
        <EditText
            android:id="@+id/profile_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:ems="10"
            android:enabled="false"/>
        <!-- END ID -->
        <!-- START NAME -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="18dp"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"/>
        <EditText
            android:id="@+id/profile_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:ems="10"
            android:hint="Change name"/>
        <!-- END NAME -->
        <!-- START EMAIL -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="18dp"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"/>
        <EditText
            android:id="@+id/profile_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:ems="10"
            android:hint="Modify email"/>
        <!-- END EMAIL -->
        <!-- START GENDER -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:textSize="18dp"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"/>
        <Spinner
            android:id="@+id/profile_gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:ems="10"
            android:hint="Profile gender"/>
        <!-- END GENDER -->
        <!-- START COMMENT -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Comment"
            android:textSize="18dp"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"/>
        <EditText
            android:id="@+id/profile_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:ems="10"
            android:hint="Modify comment"/>
        <!--- END COMMENT -->
        <Button
            android:id="@+id/profile_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="Save Profile" />
    </LinearLayout>
</ScrollView>